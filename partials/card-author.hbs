<div class='o-grid__col o-grid__col--initial-grow o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-card-author-wrap'>
  <a class='c-card-author' href='{{ url }}'>
    {{#if profile_image}}
      <div class='c-card-author__media'>
        <img class='c-card-author__image lazyload' data-src='{{ img_url profile_image size='xs' }}' alt='{{ name }}' width='64' height='64'>
      </div>
    {{/if}}

    <div class='c-card-author__content'>
      <h3 class='c-card-author__name'>{{ name }}</h3>
      <p class='c-card-author__bio'>{{ bio }}</p>
    </div>
  </a>
</div>