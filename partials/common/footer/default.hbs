          {{#if @site.footer_first_navigation}}
          <div class="s-common-default-footer__nav--outer">
            <div class="s-common-default-footer__nav--title">{{#if @site.footer_first_navigation_title}}{{@site.footer_first_navigation_title}}{{else}}Navigation 1{{/if}}</div>
            <ul class="s-common-default-footer__nav">{{navigation type="footerFirst"}}</ul>
          </div>
          {{/if}}
        {{/if}}

        {{#if @site.use_footer_second_navigation}}
          {{#if @site.use_footer_second_navigation}}
          <div class="s-common-default-footer__nav--outer">
