{{#if @site.use_footer}}
<div class="s-common-default-footer__outer">
  <div class="o-grid">
    <div class="o-grid__col o-grid__col--full">

      <div class="s-common-default-footer">
        <div class="s-common-default-footer__org">
          <div class="s-common-default-footer__identity">
          {{#if @site.logo }}
            <div class="s-common-default-footer__logo">
              <img class="s-common-default-footer__logo--image" src="{{ @site.logo }}" alt="{{ @site.title }}의 로고" />
            </div>
          {{else}}
            <h1 class="s-common-default-footer__identity--name">{{ @site.title }}</h1>
          {{/if}}
          </div>
          <ul class="s-common-default-footer__site-info">
            {{#if @site.footer_company}}<li class="s-common-default-footer__site-info--item">{{@site.footer_company}}</li>{{/if}}
            {{#if @site.footer_company_ceo}}<li class="s-common-default-footer__site-info--item">대표 : {{@site.footer_company_ceo}}</li>{{/if}}
            {{#if @site.footer_company_number}}<li class="s-common-default-footer__site-info--item">사업자등록번호 : {{@site.footer_company_number}}</li>{{/if}}
            {{#if @site.footer_company_address}}<li class="s-common-default-footer__site-info--item">{{@site.footer_company_address}}</li>{{/if}}
            {{#if @site.footer_company_phone}}<li class="s-common-default-footer__site-info--item">대표전화 : {{@site.footer_company_phone}}</li>{{/if}}
            {{#if @site.footer_company_privacy_officer}}<li class="s-common-default-footer__site-info--item">개인정보보호 책임자 : {{@site.footer_company_privacy_officer}}</li>{{/if}}
            {{#if @site.footer_text}}<li class="s-common-default-footer__site-info--item">{{@site.footer_text}}</li>{{/if}}
          </ul>
          <div class="s-common-default-footer__sns">
